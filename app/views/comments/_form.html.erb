<%= form_with model: [ @post, @post.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
    <% @post.errors.full_messages_for(:commenter).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% @post.errors.full_messages_for(:body).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </p>
  <div>
    <%= form.label :status %><br>
    <%= form.select :status, %w[public private archived], selected: 'public' %>
  </div>
  <p>
    <%= form.submit %>
  </p>
<% end %>