<h1><%= @post.title %></h1>

<p><%= @post.content %></p>

<ul>
  <li><%= link_to "Edit Post", edit_post_path(@post) %></li>
  <li><%= link_to "Destroy", post_path(@post), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure you'd like to delete '#{@post.title}'?"
  } %></li>
  <li><%= link_to "Home", root_path %></li>
</ul>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a Comment</h2>
<%= render 'comments/form' %>
